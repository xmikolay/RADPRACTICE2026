@model S00254903_ClassLibrary.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Age)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Eircode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Eircode)
        </dd>
    </dl>

    <!--Q3 (b)  Amend the student details page to show a list of all the courses that the student is enrolled in. This should also show who the lecturer is for that module.-->
    <h4>Enrolled Courses</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Lecturer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.Name</td>
                    <td>@course.Lecturer.Title @course.Lecturer.FirstName @course.Lecturer.Surname</td>
                </tr>
            }
        </tbody>
    </table>
    <!--Q3 (b)  Amend the student details page to show a list of all the courses that the student is enrolled in. This should also show who the lecturer is for that module.-->

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
